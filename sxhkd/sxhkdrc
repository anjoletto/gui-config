# ------------------------------------------------------------ #
# default programs for every wm
# ------------------------------------------------------------ #
super + space
  rofi --combi-modi drun,window -show combi

super + control + space
  dmenu_run

super + Return
  alacritty

super + Escape
  i3lock -c 000000 -e -f
#  dunstctl set-paused true; i3lock -c 000000 -e -f
#  xscreensaver-command -lock

super + n
  dunstctl set-paused toggle
# ------------------------------------------------------------ #

# ------------------------------------------------------------ #
# screenshots
# ------------------------------------------------------------ #
Print
  scrot -q 100 -z -s -e 'mv $f ~/screenshots/'

super + Print
  scrot -q 100 -z -u -e 'mv $f ~/screenshots/'

super + shift + Print
  scrot -q 100 -z -e 'mv $f ~/screenshots/'
# ------------------------------------------------------------ #

# ------------------------------------------------------------ #
# multimedia keys
# ------------------------------------------------------------ #
XF86Audio{Prev,Next}
 playerctl {previous,next} 

XF86AudioPlay
  playerctl play-pause

XF86AudioMute
  amixer sset Master toggle

shift + XF86Audio{Raise,Lower}Volume
  pamixer -{i,d} 1
  #amixer sset Master 1%{+,-} unmute

XF86Audio{Raise,Lower}Volume
  pamixer -{i,d} 5
  #amixer sset Master 5%{+,-} unmute

XF86MonBrightness{Up,Down}
  doas light -{A,U} 5

XF86Search
  poweroff
# ------------------------------------------------------------ #
