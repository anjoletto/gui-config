[global]
title = Dunst              # title for X stuff
class = Dunst              # class for X stuff
monitor = 0                # default to primary monitor
follow = keyboard          # notification shows where keyboard has focus
browser = /usr/bin/firefox # for actions
idle_threshold = 120       # keep notifications if user is idle more than 120s

# ---------------------------------------------------------------------------- #
# notification window
# ---------------------------------------------------------------------------- #
geometry = "400x5-0+40" # width x quantity x-offset y-offset
notification_height = 0 # window height 0 will make it fit notification
shrink = yes            # same, but horizontally
transparency = 5        # can see window below and still read notification
frame_width = 3         # frame around the notification window
corner_radius = 25      # makes corners round
# ---------------------------------------------------------------------------- #

# ---------------------------------------------------------------------------- #
# notification text
# ---------------------------------------------------------------------------- #
markup = full               # parse every markup option
font = Fira Code 12         # same font as other stuff
format = %a\n%s\n%b         # appname + symmary + body
alignment = left            # horizontal text alignment
vertical_alignment = center # vertical text alignment
padding = 12                # keep 1 char of distance
horizontal_padding = 12     # same as line above
line_height = 4             # space between lines
icon_position = off         # remove icons from notifications
word_wrap = yes             # wrap text inside window
ignore_newline = no         # use newlife as from notification
# ---------------------------------------------------------------------------- #

# ---------------------------------------------------------------------------- #
# notifications history
# ---------------------------------------------------------------------------- #
indicate_hidden = yes       # when there is more notification that it can show
sort = yes                  # urgent notifications first
separator_height = 3        # should be the same value as frame_width
separator_color = "#8FBCBB" # same color as window frame
sticky_history = false      # close history after some time
history_length = 100        # keep 100 messages in history
stack_duplicates = true     # combine duplicate notifications
hide_duplicate_count = no   # show how many duplicates
show_indicators = yes       # show actions
show_age_threshold = 60     # show age of messages after 60 seconds
# ---------------------------------------------------------------------------- #


# ---------------------------------------------------------------------------- #
# keybidings
# ---------------------------------------------------------------------------- #
[shortcuts]
close = ctrl+shift+space
close_all = ctrl+space
history = ctrl+period
context = ctrl+shift+period
# ---------------------------------------------------------------------------- #

# ---------------------------------------------------------------------------- #
# common by urgency
# ---------------------------------------------------------------------------- #
[urgency_low]
timeout = 5
background = "#2E3440"
foreground = "#D8DEE9"
frame_color = "#A3BE8C"

[urgency_normal]
timeout = 10
background = "#2E3440"
foreground = "#D8DEE9"
frame_color = "#8FBCBB"

[urgency_critical]
timeout = 0
background = "#2E3440"
foreground = "#D8DEE9"
frame_color = "#BF616A"
# ---------------------------------------------------------------------------- #

