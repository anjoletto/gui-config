;---------------------------------------------------------------------------- ;
; bars configuration
; ---------------------------------------------------------------------------- ;
[bar/leftwm-monitor0]
inherit = bar/barbase
modules-left = workspace0
monitor = eDP-1

[module/workspace0]
type = custom/script
exec = leftwm-state -w 0 -t $SCRIPTPATH/template.liquid
tail = true

[bar/leftwm-monitor1]
inherit = bar/barbase
modules-left = workspace1
monitor = HDMI-1

[module/workspace1]
type = custom/script
exec = leftwm-state -w 1 -t $SCRIPTPATH/template.liquid
tail = true

[bar/i3]
inherit = bar/barbase
modules-left = i3
monitor = ${env:MONITOR:}

[bar/qtile]
inherit = bar/barbase
monitor = eDP-1
; ---------------------------------------------------------------------------- ;

; ---------------------------------------------------------------------------- ;
[colors]
background = #2E3440
transparent = #00000000
foreground = #D8DEE9
fg-alt = #ECEFF4
bg-alt = #4C566A

alert = #BF616A
