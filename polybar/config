ramp-volume-2-foreground = ${colors.goodish}
ramp-volume-3-foreground = ${colors.badish}
ramp-volume-4-foreground = ${colors.bad}
; ---------------------------------------------------------------------------- ;

; ---------------------------------------------------------------------------- ;
[module/battery]
type = internal/battery
