normal = #D8DEE9
good = #A3BE8C
goodish = #EBCB8B
badish = #D08770
bad = #BF616A
; ---------------------------------------------------------------------------- ;

; ---------------------------------------------------------------------------- ;
[bar/barbase]
;bottom = true
height = 35
fixed-center = true
background = ${colors.background}
#background = ${colors.transparent}
foreground = ${colors.foreground}

line-size = 3
line-color = ${colors.background}
#line-color = ${colors.transparent}
border-size =  q
border-color = ${colors.bg-alt}

padding = 0

module-margin = 1

font-0 = "Fira Mono:size=13"
font-1 = "Font Awesome 5 Free Solid:syle=Regular:size=13"
font-2 = "Font Awesome 5 Free Regular:syle=Regular:size=13"
font-3 = "Font Awesome 5 Brands Regular:syle=Regular:size=13"

modules-center = temperature cpu memory nvme hd eth wifi battery 
modules-right = volume uptime date

tray-position = right
tray-padding = 2

cursor-click = pointer
cursor-scroll = ns-resize
